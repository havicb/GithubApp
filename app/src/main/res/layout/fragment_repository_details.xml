<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_fullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView_autorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fullName"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView_createdAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_autorImage"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/textView_lastUpdated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_createdAt"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView_programmingLanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_lastUpdated"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView_githubUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_programmingLanguage"
        android:layout_marginTop="24dp"
        android:autoLink="web"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>